{% extends "templates/base.jinja2" %}

{% block content %}
	<article class="detail-post col-md-12">
		<time>{{ post.date }}</time>
		<h2>{{ post.title }}</h2>
		<p><strong>Author: </strong>{{ post.author }}</p>
		<div>
			{{ post.content }}
		</div>
	</article>
	<section class="post-comment col-md-12">
		<div class="form-comment col-md-12">
			<h2>Submit a comment:</h2>
			<form role="form">
				<div class="form-group">
				    <label>Name:</label>
				    <input type="email" class="form-control" name="name" id="name">
				</div>
				<div class="form-group">
				    <label>Comment:</label>
				    <textarea class="form-control" name="comment" rows="3"></textarea>
				</div>
				<button type="submit" name="form.comment" class="btn btn-default">Submit</button>
			</form>
		</div>
		<div class="list-comments col-md-12">
			<h2>Comments:</h2>
			<ul>
				{% for comment in post.comment %}
					<li>
						<h2>{{ comment.name }}</h2>
						<p>{{ comment.comment }}</p>
					</li>
				{% endfor %}
			</ul>
		</div>
		<h2>{{ msg }}</h2>
	</section>
{% endblock %}